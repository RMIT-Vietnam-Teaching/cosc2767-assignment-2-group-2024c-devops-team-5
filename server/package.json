{
  "name": "server",
  "version": "1.0.0",
  "description": "RMIT Ecommerce Server",
  "scripts": {
    "dev": "nodemon",
    "start": "cross-env NODE_ENV=production node index.js",
    "seed:db": "node utils/seed.js",
    "test": "echo 'Passing Jest tests' && exit 1"

  },
  "jest": {
    "testEnvironment": "node",
    "testTimeout": 30000,
    "verbose": true,
    "forceExit": true,
    "detectOpenHandles": true,
    "setupFilesAfterEnv": [
      "<rootDir>/tests/test-setup.js"
    ],
    "transform": {
      "^.+\\.js$": "babel-jest"
    },
    "transformIgnorePatterns": [
      "/node_modules/(?!(chalk)/)"
    ]
  },
  "dependencies": {
    "@faker-js/faker": "^8.4.1",
    "aws-sdk": "^2.799.0",
    "axios": "^1.7.9",
    "bcrypt": "^5.1.1",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "dompurify": "^2.3.8",
    "dotenv": "^8.0.0",
    "express": "^4.17.1",
    "helmet": "^4.6.0",
    "jsonwebtoken": "^8.5.1",
    "mailchimp-api-v3": "^1.14.0",
    "mailgun-js": "^0.6.7",
    "mongod": "^2.0.0",
    "mongodb-memory-server-core": "^10.1.3",
    "mongoose-slug-generator": "^1.0.4",
    "moongose": "^1.0.0",
    "multer": "^1.4.2",
    "passport": "^0.7.0",
    "passport-facebook": "^3.0.0",
    "passport-google-oauth2": "^0.2.0",
    "passport-jwt": "^4.0.0",
    "socket.io": "^4.2.0",
    "supertest": "^7.0.0",
    "validatorjs": "^3.18.1"
  },
  "devDependencies": {
    "@shelf/jest-mongodb": "^4.3.2",
    "cross-env": "^5.2.1",
    "cypress": "^13.17.0",
    "jest": "^29.7.0",
    "mongodb-memory-server": "^10.1.3",
    "mongoose": "^6.13.5",
    "nodemon": "^3.1.9"
  }
}
